<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg_publish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tim_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.circle.publish">


    <RelativeLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="发表文字"
            android:textColor="#000"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pub_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="发表"
            android:textColor="#41BC41"
            android:textSize="20dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/context_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"
        android:background="@null" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/context_publish" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/img1"
        android:layout_toRightOf="@+id/img1" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/img2"
        android:layout_toRightOf="@+id/img2" />

    <ImageView
        android:id="@+id/dcim_publish"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/img1"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_dcim" />

    <RelativeLayout
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp">

        <ImageView
            android:id="@+id/location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/lo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/location"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/location"
            android:text="所在位置"
            android:textColor="#000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/lo"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_more" />

        <ImageView
            android:id="@+id/people"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/location"
            android:layout_below="@+id/location"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_people" />

        <TextView
            android:id="@+id/pe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/people"
            android:layout_alignLeft="@+id/lo"
            android:text="谁可以看"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pe"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/more"
            android:text="公开"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/pe"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_more" />

        <ImageView
            android:id="@+id/ai"
            android:layout_width="21dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/location"
            android:layout_alignRight="@+id/location"
            android:layout_below="@+id/people"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_ait" />

        <TextView
            android:id="@+id/re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ai"
            android:layout_alignLeft="@+id/lo"
            android:layout_toRightOf="@+id/ai"
            android:text="提醒谁看"
            android:textColor="#000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/re"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_more" />
    </RelativeLayout>

</RelativeLayout>
