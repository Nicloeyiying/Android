<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/tim_bg"
    android:id="@+id/bg3"
    tools:context="com.example.circleoffriends.publish">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/a">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/cancel"
            android:textSize="20dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="发表文字"
            android:textSize="26dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表"
            android:textColor="#41BC41"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/pub"/>
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"
        android:background="@null"
        android:id="@+id/wenzi"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/wenzi"
        android:id="@+id/img1"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/img1"
        android:layout_alignTop="@+id/img1"
        android:id="@+id/img2"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/img2"
        android:layout_alignTop="@+id/img2"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/dicm"
        android:layout_below="@+id/img1"
        android:src="@drawable/ic_dicm"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:id="@+id/b">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_location"
            android:scaleType="centerCrop"
            android:id="@+id/location"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在位置"
            android:textColor="#000"
            android:layout_alignBottom="@+id/location"
            android:layout_toRightOf="@+id/location"
            android:layout_marginLeft="20dp"
            android:id="@+id/lo"
            android:textSize="20dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_more"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/lo" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_people"
            android:scaleType="centerCrop"
            android:id="@+id/people"
            android:layout_below="@+id/location"
            android:layout_marginBottom="20dp"
            android:layout_alignLeft="@+id/location" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/people"
            android:text="谁可以看"
            android:textSize="20dp"
            android:textColor="#000"
            android:id="@+id/pe"
            android:layout_alignLeft="@+id/lo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公开"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/pe"
            android:layout_toLeftOf="@+id/more"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_more"
            android:id="@+id/more"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/pe" />
        <ImageView
            android:layout_width="21dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:id="@+id/ai"
            android:src="@drawable/ic_ai"
            android:layout_below="@+id/people"
            android:layout_alignLeft="@+id/location"
            android:layout_alignRight="@+id/location" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ai"
            android:layout_toRightOf="@+id/ai"
            android:text="提醒谁看"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/re"
            android:layout_alignLeft="@+id/lo" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_more"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/re" />
    </RelativeLayout>
</RelativeLayout>
