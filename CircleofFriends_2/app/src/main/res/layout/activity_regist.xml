<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.circleoffriends.regist"
    android:background="@drawable/tim_bg"
    android:id="@+id/bg2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号注册"
            android:textSize="32dp"
            android:textColor="#000"
            android:id="@+id/title"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="260dp"
                android:layout_height="100dp"
                android:background="@drawable/line_border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:text="昵称"
                    android:textSize="20dp"
                    android:id="@+id/na"
                    android:gravity="center_vertical"
                    android:textColor="#000"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:ems="7"
                    android:id="@+id/name"
                    android:layout_alignBottom="@+id/na"
                    android:background="@null"
                    android:layout_marginLeft="100dp"
                    android:textSize="20dp"
                    android:hint="例如：陈晨"
                    android:textColorHint="#D2D2D2"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/ic_ca"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="33dp"
                android:id="@+id/img"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/line_border"
            android:layout_marginTop="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国家/地区"
                android:textSize="20dp"
                android:textColor="#000"
                android:id="@+id/co"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:ems="12"
                android:id="@+id/country"
                android:layout_marginLeft="100dp"
                android:hint="中国（+86）"
                android:textColorHint="#42AD57"
                android:background="@null"
                android:textSize="20dp"
                android:layout_alignBottom="@+id/co"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="#000"
                android:textSize="20dp"
                android:id="@+id/ph"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:ems="12"
                android:id="@+id/phone"
                android:layout_marginLeft="100dp"
                android:hint="请填写手机号"
                android:textColorHint="#D2D2D2"
                android:background="@null"
                android:textSize="20dp"
                android:layout_alignBottom="@+id/ph"
                android:inputType="number"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textColor="#000"
                android:textSize="20dp"
                android:id="@+id/pwd"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ems="12"
                android:id="@+id/password"
                android:layout_marginLeft="100dp"
                android:layout_alignBottom="@+id/pwd"
                android:textSize="20dp"
                android:hint="填写密码"
                android:background="@null"
                android:textColorHint="#D2D2D2"
                android:inputType="numberPassword"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:textColor="#000"
                android:textSize="20dp"
                android:id="@+id/em"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ems="12"
                android:id="@+id/email"
                android:layout_marginLeft="100dp"
                android:layout_alignBottom="@+id/em"
                android:textSize="20dp"
                android:hint="填写邮箱"
                android:background="@null"
                android:textColorHint="#D2D2D2"
                android:inputType="textEmailAddress"/>
        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="注册"
            android:textSize="24dp"
            android:textColor="#FAFAFA"
            android:background="@drawable/dl"
            android:id="@+id/regist"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/xieyi"
            android:autoLink="web"
            android:textSize="12dp"
            android:text="点击上面的“注册”按钮，即表示你同意《腾讯微信软件许可及服务协议》和《微信隐私保护指引》"/>
    </LinearLayout>
</RelativeLayout>
