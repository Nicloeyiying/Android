<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/ic_b"
    android:id="@+id/relativeLayout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/relativeLayout1"
        android:layout_marginTop="61dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#85ffffff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="用户名："
        android:id="@+id/textView"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/nameEdit"
        android:background="@null"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="密    码："
            android:textSize="18dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/passwordEdit"
            android:background="@null"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="确认密码："
            android:textSize="18dp"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/repasswordEdit"
            android:background="@null"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="性    别："
        android:textSize="18dp"
        android:id="@+id/sexText"
        android:layout_below="@+id/repasswordEdit"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_below="@+id/repasswordEdit"
        android:layout_alignStart="@+id/repasswordEdit"
        android:layout_alignBottom="@+id/sexText"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="18dp"
            android:id="@+id/nan"/>
        <RadioButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@id/nan"
            android:text="女"
            android:textSize="18dp"/>
    </RadioGroup>

</RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:background="#85ffffff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爱好："
        android:textSize="18dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME"
        android:id="@+id/gameCheck"
        android:layout_toEndOf="@+id/textView4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK"
        android:id="@+id/bookCheck"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPORTS"
        android:id="@+id/sportsCheck" />
</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/register"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@drawable/dl"
        android:gravity="center" />
</RelativeLayout>
