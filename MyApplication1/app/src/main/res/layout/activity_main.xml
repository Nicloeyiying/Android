<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="top">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:layout_width="250px"
                android:layout_height="80px"
                android:text="账号登录"
                android:id="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="48px"
                android:textColor="#000"/>

            <ImageView
                android:layout_width="180px"
                android:layout_height="180px"
                android:id="@+id/imageView"
                android:src="@drawable/icon_hui"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="115px"
            android:layout_marginLeft="36px"
            android:background="@drawable/line_border">

            <ImageView
                android:layout_width="50px"
                android:layout_height="68px"
                android:id="@+id/imageView2"
                android:layout_alignParentStart="true"
                android:src="@drawable/icon_phone"
                android:layout_marginTop="20px"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:id="@+id/editText1"
                android:layout_above="@+id/imageView2"
                android:hint="手机号/邮箱/会员名"
                android:background="@null"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_marginLeft="300px"
                android:textSize="40px"
                android:textColorHint="#a7a7a7" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="115px"
            android:layout_marginLeft="36px"
            android:background="@drawable/line_border">

            <ImageView
                android:layout_width="50px"
                android:layout_height="68px"
                android:id="@+id/imageView3"
                android:layout_alignParentStart="true"
                android:src="@drawable/icon_mima"
                android:layout_marginTop="20px"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:inputType="textPassword"
                android:id="@+id/editText2"
                android:layout_marginLeft="300px"
                android:hint="请输入登录密码"
                android:background="@null"
                android:layout_alignBottom="@+id/imageView3"
                android:textColorHint="#a7a7a7"
                android:textSize="40px"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75px"
            android:layout_marginLeft="25px"
            android:layout_marginTop="10px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:text="注册"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="#FFC100"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:text="忘记密码？"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textColor="#FFC100"
                android:layout_marginRight="64px"
                android:layout_marginTop="8px"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginTop="5px">

            <Button
                android:layout_width="900px"
                android:layout_height="120px"
                android:id="@+id/button"
                android:text="登录"
                android:textSize="48px"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:background="@drawable/dl_border"
                android:layout_marginTop="20px"/>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="60px"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:layout_width="800px"
                android:layout_height="110px"
                android:layout_centerHorizontal="true"
                android:background="@drawable/line_border"
                android:layout_marginTop="5px"
                android:layout_marginBottom="10px"/>

            <TextView
                android:layout_width="250px"
                android:layout_height="45px"
                android:text="第三方登录"
                android:textSize="38px"
                android:gravity="center"
                android:textColor="#D2D2D2"
                android:background="#fff"
                android:layout_marginRight="50px"
                android:layout_gravity="bottom|center_horizontal" />

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30px">

            <ImageView
                android:layout_width="110px"
                android:layout_height="90px"
                android:id="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:src="@drawable/btn_weixin"
                android:layout_marginRight="104px"/>

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:id="@+id/imageView5"
                android:layout_centerHorizontal="true"
                android:src="@drawable/btn_zfb"
                android:layout_marginLeft="104px"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35px">

            <TextView
                android:layout_width="900px"
                android:layout_height="120px"
                android:text="手机快速登录"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textSize="48px"
                android:background="@drawable/phone_border"
                android:textColor="#FFC100"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>