<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号：356689878998"
            android:id="@+id/dingdan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textColor="#FFC100"
            android:layout_marginLeft="100dp"
            android:id="@+id/status"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/product_img"
            android:src="@drawable/car"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥2000"
                android:textColor="#FFC100"
                android:id="@+id/product_price"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_title"
                android:textSize="13dp"
                android:text="本田飞度 两厢 1.5 自动挡 五座"
                android:layout_below="@+id/product_price"
                android:textColor="#B2B2B2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.01.08-2018.01.10"
                android:id="@+id/pro_time"
                android:layout_below="@+id/product_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2天"
                android:textColor="#FFC100"
                android:layout_alignTop="@+id/pro_time"
                android:layout_toRightOf="@+id/pro_time"
                android:layout_marginLeft="10dp"
                android:id="@+id/time"/>
            <ImageButton
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/shop_button"
                android:src="@drawable/btn_back"
                android:layout_alignTop="@+id/product_title"
                android:layout_alignBottom="@+id/product_title"
                android:layout_marginRight="13dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
