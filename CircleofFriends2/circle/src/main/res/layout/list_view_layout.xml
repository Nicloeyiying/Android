<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#62B0D6"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/context_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/names"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img1_list"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/img2_list"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_toEndOf="@+id/img1_list"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/img3_list"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_toEndOf="@+id/img2_list"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/time_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img1_list"
                android:src="@drawable/ic_img"
                android:text="10分钟前"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/comment_list"
                android:layout_width="20sp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/time_list"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_comment" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
